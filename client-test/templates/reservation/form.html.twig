{% extends 'base2.html.twig' %}
{% block body %}
    {% if data %}
        <h2>Editer Reservation : #{{ data.id }}</h2>
        {{ form_start(formulaire, {'action': path('reservation_save', {'id': data.id}), 'method': 'POST'} ) }}
    {% else %}
        <h2>Ajout Reservation</h2>
        {{ form_start(formulaire, {'action': path('reservation_ajout', {}), 'method': 'POST'} ) }}
    {% endif %}
    <div class="card-body">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(formulaire.nom) }}</label>
            <div class="col-sm-10">
                {% if data %}
                    {{ form_widget(formulaire.nom, {'attr': {'class': 'form-control', 'placeholder' : 'Nom', 'value': data.nom}}) }}
                {% else %}
                    {{ form_widget(formulaire.nom, {'attr': {'class': 'form-control', 'placeholder' : 'Nom'}}) }}
                {% endif %}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(formulaire.ville) }}</label>
            <div class="col-sm-10">
                {% if data %}
                    {{ form_widget(formulaire.ville, {'attr': {'class': 'form-control', 'value': data.ville}}) }}
                {% else %}
                    {{ form_widget(formulaire.ville, {'attr': {'class': 'form-control'}}) }}
                {% endif %}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(formulaire.hotel) }}</label>
            <div class="col-sm-10">
                {% if data %}
                    {{ form_widget(formulaire.hotel, {'attr': {'class': 'form-control', 'value': data.hotel}}) }}
                {% else %}
                    {{ form_widget(formulaire.hotel, {'attr': {'class': 'form-control'}}) }}
                {% endif %}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(formulaire.prixAdulte) }}</label>
            <div class="col-sm-10">
                {% if data %}
                    {{ form_widget(formulaire.prixAdulte, {'attr': {'class': 'form-control',  'value': data.prixAdulte}}) }}
                {% else %}
                    {{ form_widget(formulaire.prixAdulte, {'attr': {'class': 'form-control'}}) }}
                {% endif %}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{ form_label(formulaire.prixEnfant) }}</label>
            <div class="col-sm-10">
                {% if data %}
                    {{ form_widget(formulaire.prixEnfant, {'attr': {'class': 'form-control', 'value': data.prixEnfant}}) }}
                {% else %}
                    {{ form_widget(formulaire.prixEnfant, {'attr': {'class': 'form-control'}}) }}
                {% endif %}
            </div>
        </div>

    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        {{ form_widget(formulaire.save, {'attr': {'class': 'btn btn-info'}}) }}
        <input type="hidden" id="path_get_hotel" value ="{{path('reservation_ajout', {})}}">
    </div>
    {{ form_end(formulaire) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="reservation.js"></script>
{% endblock %}

